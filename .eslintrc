{
    "ecmaFeatures": {
        "arrowFunctions": true,
        "blockBindings": true,
        "classes": true,
        "defaultParams": true,
        "destructuring": true,
        "forOf": true,
        "generators": true,
        "modules": true,
        "spread": true,
        "superInFunctions": true,
        "templateStrings": true,
        "jsx": true
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "quotes": [1, "single"],
        "block-scoped-var": 2,
        "consistent-return": 1,
        "curly": [2, "all"],
        "default-case": 2,
        "eqeqeq": [1, "allow-null"],
        "guard-for-in": 2,
        "no-alert": 2,
        "no-caller": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-fallthrough": 1,
        "no-implied-eval": 2,
        "no-param-reassign": 2,
        "no-redeclare": 2,
        "no-return-assign": 1,
        "no-throw-literal": 2,
        "no-void": 2,
        "radix": 2,
        "vars-on-top": 2,
        "wrap-iife": 2,
        "no-catch-shadow": 2,
        "no-shadow": 2,
        "indent": 2,
        "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
        "camelcase": [2, {"properties": "always"}],
        "comma-style": [2, "last"],
        "consistent-this": [2, "self"],
        "no-inline-comments": 2,
        "no-lonelu-if": 2,
        "no-nested-ternary": 1,
        "one-var": 2,
        "space-after-keywords": [2, "always"],
        "space-before-blocks": [2, "always"],
        "space-before-function-paren": [2, "always"],
        "spaces-in-parens": [2, "never"],
        "spsace-infix-ops": [2, "always"],
        "space-return-throw-case": [2, "always"],
        "spaced-line-comment": [2, "always"],
        "max-len": [1, 80, 4],
    }
}